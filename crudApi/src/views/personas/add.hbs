<div class="container p-4">
   <row>
      <div class="col-md-4 mx-auto">
         <card class="text-center">
            <div class="card-header">

               <h3 class="text-uppercase">CREAR NUEVA PERSONA</h3>
            </div>

            <div class="card-body">

               <form action="/add" method="post">
                  <div class="input-group mt-2">
                     <label for="" class="input-group-text">Nombre</label>
                     <input
                        class="form-control"
                        type="text"
                        name="name"
                        id="name"
                        placeholder="Ejemplo: Luis Angel"
                        autofocus
                        required
                     />
                  </div>

                  <div class="input-group mt-2">
                     <label for="" class="input-group-text">Apellido</label>
                     <input
                        class="form-control"
                        type="text"
                        name="lastname"
                        id="lastname"
                        placeholder="Ejemplo: Luis Angel"
                        autofocus
                        required
                     />
                  </div>

                  <div class="input-group mt-2">
                     <label for="" class="input-group-text">Edad</label>
                     <input
                        class="form-control"
                        type="number"
                        name="age"
                        id="age"
                        placeholder="18"
                        value="18"
                        autofocus
                        required
                     />
                  </div>

                  <div class="form-group mt-4 d-grid gap-2">
                     <button class="btn btn-success"> Crear</button>
                  </div>

               </form>

            </div>

         </card>
      </div>
   </row>
</div>